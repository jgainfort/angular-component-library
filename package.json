{
  "name": "angular-component-library",
  "version": "0.0.1",
  "description": "Sample Angular Component Library",
  "scripts": {
    "clean": "rm -rf dist && rm -rf build",
    "transpile-es2015": "node_modules/.bin/ngc -p src/tsconfig.build.json",
    "transpile-es5": "node_modules/.bin/ngc -p src/tsconfig.es5.json",
    "package-es2015": "node_modules/.bin/rollup build/angular-component-library.js -o dist/angular-component-library.js",
    "package-es5": "node_modules/.bin/rollup build/angular-component-library.js -o dist/angular-component-library.es5.js",
    "copy-build": "rsync -a --exclude=*.js build/ dist",
    "copy": "cp src/package.json dist/package.json",
    "build-es2015": "npm run transpile-es2015 && npm run package-es2015",
    "build-es5": "npm run transpile-es5 && npm run package-es5",
    "build": "npm run clean && npm run build-es2015 && npm run build-es5 && npm run copy-build && npm run copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgainfort/angular-component-library.git"
  },
  "keywords": [
    "Angular",
    "Component",
    "Library"
  ],
  "author": "John G. Gainfort, Jr. <gainfortj@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jgainfort/angular-component-library/issues"
  },
  "homepage": "https://github.com/jgainfort/angular-component-library#readme",
  "devDependencies": {
    "@angular/core": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "codelyzer": "^3.0.0-beta.4",
    "rxjs": "^5.3.0",
    "rollup": "^0.41.6",
    "tslint": "^4.5.1",
    "zone.js": "^0.8.5",
    "typescript": "^2.2.2"
  }
}
