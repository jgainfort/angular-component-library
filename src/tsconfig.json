{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "../dist",
    "declaration": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}
